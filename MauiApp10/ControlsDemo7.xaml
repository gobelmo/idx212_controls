<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp10.ControlsDemo7"
             Title="ControlsDemo7">
    <VerticalStackLayout Padding="20" Spacing="10" >
         <!-- ActivityIndicator Example -->
        <Label Text="ActivityIndicator Example" />
        <ActivityIndicator x:Name="ActivityIndicatorControl" IsRunning="False" />
        <Button Text="Start Activity" Clicked="OnStartActivity" />
        <Button Text="Stop Activity" Clicked="OnStopActivity" />

        <!-- ProgressBar Example -->
        <Label Text="ProgressBar Example" />
        <ProgressBar x:Name="ProgressBarControl" Progress="0" />
        <Button Text="Increase Progress" Clicked="OnIncreaseProgress" />
    </VerticalStackLayout>
</ContentPage>